<html>
  <head>
    <title>Lecturer Dashboard</title>
  </head>
  <body>
    <h1>Welcome to the Lecturer Dashboard</h1>

    <!-- Student Information -->
    <h2>Student Information:</h2>
    <p>Student Name: {{student.firstName}} {{student.lastName}}</p>
    <p>Student ID: {{student.id}}</p>
    <!-- Add more student details here -->

    <!-- Form to enter assessment scores -->
    <form action="/entergrades/assignments" method="POST">
      <h2>Enter Assessment Scores for
        {{student.firstName}}
        {{student.lastName}}:</h2>
      <label for="assignment1">Assignment 1:</label>
      <input type="number" id="assignment1" name="assignment1" required /><br
      /><br />

      <label for="assignment2">Assignment 2:</label>
      <input type="number" id="assignment2" name="assignment2" required /><br
      /><br />

      <!-- Add more input fields for assignment scores -->

      <button type="submit">Submit Assignment Scores</button>
    </form>

    <!-- Form to enter CAT scores -->
    <form action="/entergrades/cats" method="POST">
      <h2>Enter CAT Scores for {{student.firstName}} {{student.lastName}}:</h2>
      <label for="cat1">CAT 1:</label>
      <input type="number" id="cat1" name="cat1" required /><br /><br />

      <label for="cat2">CAT 2:</label>
      <input type="number" id="cat2" name="cat2" required /><br /><br />

      <!-- Add more input fields for CAT scores -->

      <button type="submit">Submit CAT Scores</button>
    </form>

    <!-- Form to enter exam scores -->
    <form action="/entergrades/exams" method="POST">
      <h2>Enter Exam Score for {{student.firstName}} {{student.lastName}}:</h2>
      <label for="exam">Exam:</label>
      <input type="number" id="exam" name="exam" required /><br /><br />

      <!-- Add more input fields for exam scores -->

      <button type="submit">Submit Exam Score</button>
    </form>
  </body>
</html>